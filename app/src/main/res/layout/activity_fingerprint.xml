<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="@string/item_fingerprint"/>

    <Button
        android:id="@+id/btn_enrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enrol fingerprint" />

    <Button
        android:id="@+id/btnCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Capture fingerprint" />

    <TextView
        android:id="@+id/tvDevStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_ready" />

    <TextView
        android:id="@+id/tvFpStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_ready" />

    <ImageView
        android:id="@+id/ivFpImage"
        android:layout_width="128dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@mipmap/ico_fun4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="@string/tv_ready" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_ready" />
</LinearLayout>
